@page
@model FUMiniHotelManagementClient.Pages.AdminReservationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Job Dashboard | By Code Info</title>
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<body>
    <div class="container">
        <nav>
            <div class="navbar">
                <div class="logo">
                    <img src="/pic/logo.jpg" alt="">
                    <h1>Hotel</h1>
                </div>
                <ul>
                    <li>
                        <a href="CustomerInformation">
                            <i class="fas fa-user"></i>
                            <span class="nav-item">Customer</span>
                        </a>
                    </li>
                    <li>
                        <a href="RoomInformation">
                            <i class="fas fa-chart-bar"></i>
                            <span class="nav-item">Room</span>
                        </a>
                    </li>
                    <li>
                        <a href="AdminReservation">
                            <i class="fas fa-tasks"></i>
                            <span class="nav-item">Reservation</span>
                        </a>
                    </li>

                    <li>
                        <a href="ReportStatistic">
                            <i class="fab fa-dochub"></i>
                            <span class="nav-item">Statistic</span>
                        </a>
                    </li>
                    <li>
                        <a href="Login" class="logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span class="nav-item">Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="main">
            <div class="main-top">
                <p>Dam Anh Bang SE150648 University</p>
            </div>
            <div class="main-body">
                <h1>Reservation</h1>

                <form method="get">
                    <div class="search_bar">
                        <input type="date" asp-for="startDate">
                        <input type="date" asp-for="endDate">
                        <input type="submit" value="Search" />
                    </div>
                </form>

                <div class="row">
                </div>
                @foreach (var item in Model.BookingReservations)
                {
                    <div class="job_card">
                        <div class="job_details">
                            <div class="text">
                                <div>
                                    <span style="font-weight: bold;">Booking Date: </span>
                                    <span>@item.BookingDate</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Total Price: </span>
                                    <span>@item.TotalPrice</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Customer: </span>
                                    <span>@item.Customer.CustomerFullName</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Status: </span>
                                    <span>@item.BookingStatus</span>
                                </div>
                            </div>
                        </div>
                        <div class="job_salary">
                            <a asp-page="DetailBookingReservation" asp-route-reservationId="@item.BookingReservationId"><i class="fa-solid fa-eye"></i></a>
                        </div>


                    </div>
                }
            </div>
        </section>
    </div>

</body>

</html>