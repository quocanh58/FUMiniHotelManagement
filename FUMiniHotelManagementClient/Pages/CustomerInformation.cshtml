@page
@model FUMiniHotelManagementClient.Pages.CustomerInformationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Job Dashboard | By Code Info</title>
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<body>

    <div class="container">
        <nav>
            <div class="navbar">
                <div class="logo">
                    <img src="/pic/logo.jpg" alt="">
                    <h1>Hotel</h1>
                </div>
                <ul>
                    <li>
                        <a href="CustomerInformation">
                            <i class="fas fa-user"></i>
                            <span class="nav-item">Customer</span>
                        </a>
                    </li>
                    <li>
                        <a href="RoomInformation">
                            <i class="fas fa-chart-bar"></i>
                            <span class="nav-item">Room</span>
                        </a>
                    </li>
                    <li>
                        <a href="AdminReservation">
                            <i class="fas fa-tasks"></i>
                            <span class="nav-item">Reservation</span>
                        </a>
                    </li>

                    <li>
                        <a href="ReportStatistic">
                            <i class="fab fa-dochub"></i>
                            <span class="nav-item">Statistic</span>
                        </a>
                    </li>
                    <li>
                        <a href="Login" class="logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span class="nav-item">Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="main">
            <div class="main-top">
                <p>Dam Anh Bang SE150648 University</p>
            </div>
            <div class="main-body">
                <h1>Customers</h1>

                <form method="get">
                    <div class="search_bar">
                        <input asp-for="Name" placeholder="Search name customer...">
                        <input type="submit" value="Search" />
                    </div>
                </form>

                <div class="row">
                </div>
                <div class="job_card">

                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">CustomerFullName</th>
                                <th scope="col">EmailAddress</th>
                                <th scope="col">Telephone</th>
                                <th scope="col">CustomerBirthday</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Customers != null)
                            {
                                @foreach (var customer in Model.Customers)
                                {
                                    <tr>
                                        <td>@customer.CustomerFullName</td>
                                        <td>@customer.EmailAddress</td>
                                        <td>@customer.Telephone</td>
                                        <td>@customer.CustomerBirthday</td>
                                        <td>
                                            <form asp-page-handler="Delete" asp-route-id="@customer.CustomerId"
                                                  onclick="return confirm('Are you sure you want to delete this?')">
                                                <input type="hidden" name="customerId" value="@customer.CustomerId" />
                                                <button type="submit" class="btn btn-default"><i class="fas fa-trash-alt text-white"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5">No customers available.</td>
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>
        </section>

    </div>

</body>

</html>