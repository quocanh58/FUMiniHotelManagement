@page
@model MiniHotelManagementAPIClient.Pages.LoginModel
@{

}

<div class="card w-50" style="margin:auto">
    <div class="card-header text-white" style="font-weight:bold; background-color:#BBBBBB;">
        <i class="bi bi-person-circle"></i> Login
    </div>
    <form method="post">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label"> Email </label>
                <input asp-for="LoginVM.Email" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label"> Password </label>
                <input asp-for="LoginVM.Password" type="password" class="form-control" />
            </div>
            <div class="card-footer text-muted">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle" style="color:white;"></i> Login  </button>
            </div>
            <p>
                <a asp-page="Registers">Create a new account ?</a>
            </p>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<script src="~/js/site.js"></script>